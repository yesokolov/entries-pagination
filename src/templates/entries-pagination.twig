{% extends "entries" %}
{% do view.registerAssetBundle("yesokolov\\entriespagination\\assetbundles\\entriespagination\\EntriesPaginationCPSectionAsset") %}
    {% block footer %}
        <div id="count-spinner" class="spinner hidden"></div>
        <div id="pagination" class="pagination flex" data-ajax="{{ ajax }}" data-page="{{ current }}" data-url="{{ pages[current].url }}">
            {% if not ajax %}
                <div class="page-link prev-page {{ current == 1 ? 'disabled' }}" title="Previous Page"></div>
                    {% for page in pages %}
                        <div class="paginate-empty">{{ page.empty }}</div>
                        <div class="paginate-link {{ page.current ? 'current'}}">
                            <span class="page  page-{{ page.num }}" data-num="{{ page.num }}"  data-url="{{ page.url }}">
                                {{ page.num }}
                            </span>
                        </div>
                    {% endfor %}
                <div class="page-link next-page {{ last ? 'disabled' }}" title="Next Page"></div>
                <div class="all page-info">
                    {{ current == 1 ? 1 : (100 * (current - 1) +1)  }}-{{ last ? num :  current * 100 }} of {{ num }} entries
                </div>
            {% endif %}
        </div>
        <button type="button" id="export-btn" class="btn hidden">{{ 'Exportâ€¦'|t('app') }}</button>
    {% endblock %}
